{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "nixpacksPlan": {
            "providers": ["python"]
        }
    },
    "deploy": {
        "runtime": "V2",
        "numReplicas": 1,
        "startCommand": "gunicorn run:app",
        "sleepApplication": false,
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 6
    }
}
